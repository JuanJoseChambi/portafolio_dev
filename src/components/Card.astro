---
import svgs from "../../public/Skills/Skills.ts";

interface Props {
	image: string;
}

const skills = ["html", "css", "react", "tailwind", "redux", "typescript", "expressjs", "nodejs", "postgresql", "git", "github"]
const skilsForProjets = svgs.filter((tech) => skills.includes(tech.name));

const { image } = Astro.props;
---

<div class="max-w-[1100px] w-[95%] mx-auto flex flex-col md:flex-row gap-y-3 md:gap-y-0 justify-center items-center md:items-start bg-greend-500">
	<picture class="max-w-[430px] h-[250px] flex justify-start items-start overflow-hidden rounded-md bg-redd-500">
		<img src={image as string} alt="">
	</picture>
	<section class="w-full md:max-w-[450px] pl-4 flex flex-col justify-start gap-y-3 md:gap-y-5 items-start bg-blued-500">
		<div class="flex flex-col justify-start items-start gap-1">
			<h2 class="w-2/3 font-semibold text-3xl text-neutral-800">VERSA - Tienda de ropa Vintage </h2>
			<p class="text-xs font-medium text-neutral-600">28 Feb - 1 Ago - 2024</p>
		</div>
		<p class="text-sm font-medium text-neutral-700">E-commerce de moda con dise√±o moderno e intuitivo</p>
		<div class="flex justify-center items-center gap-4">
			{skilsForProjets.map((skill) => (
				<picture class="w-[18px] h-[18px] flex flex-row justify-center items-center">
					<img src={skill.path} alt={skill.name}>
				</picture>
			))}
		</div>
		<div class="flex justify-start items-center gap-5">
			<button class="bg-neutral-100 text-sm font-medium text-neutral-800 flex justify-center items-center gap-2 px-3 py-1.5 rounded-md shadow-md shadow-neutral-400"><i class="text-lg bx bxl-github"/> Frontend</button>
			<button class="bg-neutral-100 text-sm font-medium text-neutral-800 flex justify-center items-center gap-2 px-3 py-1.5 rounded-md shadow-md shadow-neutral-400"><i class="text-lg bx bxl-github"/> Backend</button>
			<button class="bg-neutral-100 text-sm font-medium text-neutral-800 flex justify-center items-center gap-2 px-3 py-1.5 rounded-md shadow-md shadow-neutral-400"><i class="text-lg bx bx-world"/> Sito Web</button>
		</div>
	</section>
</div>